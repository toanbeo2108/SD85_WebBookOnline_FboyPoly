@using SD85_WebBookOnline.Share.Models
@model SD85_WebBookOnline.Share.Models.Combo
@{
    ViewData["Title"] = "ComboDetail";
    Layout = "~/Views/Shared/_Layout.cshtml";

}

<h1>ComboDetail</h1>

<div>
    <hr />
    <table class="table" id="page">
        <thead>
            <tr>
                <th style="text-align: center;">
                    Tên sách
                </th>
                <th style="text-align: center;">
                    Giá bán
                </th>
                <th>                          
                    Action
                </th>
            </tr>
        </thead>
        <tbody>
            @if (ViewBag.lstComboItemOfCombo != null)
            {
                var lstComboItem = ViewBag.lstComboItemOfCombo as IEnumerable<ComboItem>;
                foreach (var item in lstComboItem)
                {
                    <tr>
                        <td style="text-align: center; margin-bottom: 20px">
                            @item.ItemName
                        </td>
                        <td style="text-align: center; margin-bottom: 20px">
                            @item.Price
                        </td>
                        <td style="text-align: center; margin-bottom: 20px">
                            <a asp-action="DeleteToCombo" asp-route-id="@item.ComboItemID" class="btn status delivered">Xóa</a>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
    <hr />
    <dl class="row">

        <dt class="col-sm-2">          
            <span style="font-weight: bold;">ComboName : </span>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ComboName)
        </dd>
        <dt class="col-sm-2">
            <span style="font-weight: bold;">Price : </span>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
        <dt class="col-sm-2">
            <span style="font-weight: bold;">Status : </span>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Status)
        </dd>
        <dt class="col-sm-2">
            <span style="font-weight: bold;">Image : </span>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Image)
            @*    @if (!string.IsNullOrEmpty(Model.Image))
            {
            <img src="@Model.Image" alt="Hình ảnh" style="max-width: 200px; max-height: 200px;" />

            } *@
        </dd>
    </dl>
</div>
<div>
    @Html.ActionLink("Edit", "Edit", new { /* id = Model.PrimaryKey */ }) |
    <a asp-action="AllComboManager">Back to List</a>
</div>
