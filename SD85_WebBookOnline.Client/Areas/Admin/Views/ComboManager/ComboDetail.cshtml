@using SD85_WebBookOnline.Share.Models
@model SD85_WebBookOnline.Share.Models.Combo
@{
    ViewData["Title"] = "ComboDetail";
    Layout = "~/Views/Shared/_Layout.cshtml";

}

<h1>Chi Tiết Combo</h1>

<div>
    <hr />
    <table class="table" id="page">
        <thead>
            <tr>
                <th style="text-align: center;">
                    Ảnh sp
                </th>
                <th style="text-align: center;">
                    Tên sách
                </th>
                <th style="text-align: center;">
                    Giá bán
                </th>
                <th style="text-align: center;">
                    Số lượng
                </th>
                <th>                          
                    Action
                </th>
            </tr>
        </thead>
        <tbody>
            @if (ViewBag.lstComboItemOfCombo != null)
            {
                var lstComboItem = ViewBag.lstComboItemOfCombo as IEnumerable<ComboItem>;
                foreach (var item in lstComboItem)
                {
                    <tr>
                        <td style="text-align: center; margin-bottom: 20px">
                            <img src="~/photoBooks/@item.Quantity" alt="Combo Image" width="100" height="100" />
                        </td>
                        <td style="text-align: center; margin-bottom: 20px">
                            @item.ItemName
                        </td>
                        <td style="text-align: center; margin-bottom: 20px">
                            @item.Price
                        </td>
                        <td style="text-align: center; margin-bottom: 20px">
                            @item.Quantity
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
    <hr />
    <dl class="row">

        <dt class="col-sm-2">          
            <span style="font-weight: bold;">ComboName : </span>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ComboName)
        </dd>
        <dt class="col-sm-2">
            <span style="font-weight: bold;">Price : </span>
        </dt>
        <dd class="col-sm-10" class="tienv">
            @Html.DisplayFor(model => model.Price)
        </dd>
        <dt class="col-sm-2">
            <span style="font-weight: bold;">Status : </span>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Status)
        </dd>
        <dt class="col-sm-2">
            <span style="font-weight: bold;">Image : </span>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Image)
            @*    @if (!string.IsNullOrEmpty(Model.Image))
            {
            <img src="@Model.Image" alt="Hình ảnh" style="max-width: 200px; max-height: 200px;" />

            } *@
        </dd>
    </dl>
</div>
<script>
    // Lấy tất cả các thẻ h6 trong trang
    var h6Elements = document.querySelectorAll('.tienv');

    // Duyệt qua từng phần tử h6 và thực hiện thay đổi giá trị
    h6Elements.forEach(function (h6Element) {
        // Lấy giá trị từ phần tử
        var amount = parseFloat(h6Element.innerText);

        // Chuyển đổi giá trị thành định dạng tiền tệ và gán lại vào phần tử
        var formatted_amount = new Intl.NumberFormat('vi-VN', { style: 'currency', currency: 'VND' }).format(amount);
        h6Element.innerText = formatted_amount;

        // Hiển thị kết quả trong console
        console.log(formatted_amount);
    });
</script>
