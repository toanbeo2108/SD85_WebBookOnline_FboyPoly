@model SD85_WebBookOnline.Share.Models.Combo
@{
    ViewData["Title"] = "UpdateCombo";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>UpdateCombo</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="UpdateCombo" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ComboID" class="control-label"></label>
                <input asp-for="ComboID" class="form-control" />
                <span asp-validation-for="ComboID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ComboName" class="control-label"></label>
                <input asp-for="ComboName" class="form-control" />
                <span asp-validation-for="ComboName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Status" class="control-label"></label>
                <input asp-for="Status" class="form-control" />
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="formFile" class="form-label">Chọn ảnh cho sản phẩm</label>
                <input asp-for="Image" class="form-control" type="file" name="imageFile" accept="image/*">
            </div>
            <div class="form-group">
                <input type="submit" value="save" class="btn btn-primary btn-lg" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="AllComboManager">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}