@using SD85_WebBookOnline.Share.Models;
@model IEnumerable<SD85_WebBookOnline.Share.Models.Languge>

@{
    IEnumerable<Languge> lstLanguage = ViewBag.listLanguage as IEnumerable<Languge>;
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
<div class="row justify-content-center">
    <div class="col-md-10">
        <div class="card">

            <div class="card-header">
                Bạn Muốn Thêm Mới
                <a asp-action="CreateLanguage" asp-controller="LanguageManager" asp-area="Admin" class="btn btn-success">Thêm Mới</a>
            </div>
            <div class="card-body">
                <div class="card-header">
                    Search
                    @using (Html.BeginForm("AllLangugeManager", "LangugeManager", FormMethod.Get))
                    {
                        <input type="text" name="txtSearch" placeholder="Search!" />
                        <button type="submit" class="btn btn-warning">Search</button>
                    }
                </div>
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>STT</th>
                            <th>Tên Ngôn Ngữ</th>
                            <th>Mô Tả</th>
                            <th>TRạng Thái</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            int i = 1;

                        }
                        @foreach (var item in lstLanguage)
                        {

                            <tr>
                                <td>@i</td>
                                <td>@item.Name</td>
                                <td>@item.Description</td>
                                @if (item.Status == 1)
                                {
                                    <td>Đang Hoạt Động</td>
                                }
                                @if (item.Status != 1)
                                {
                                    <td>Ngưng Hoạt Động</td>
                                }
                                <td>
                                    <a asp-action="LanguageDetail" asp-route-id="@item.LangugeID" class="btn btn-info">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-eye-fill" viewBox="0 0 16 16"><path d="M10.5 8a2.5 2.5 0 1 1-5 0 2.5 2.5 0 0 1 5 0z" /><path d="M0 8s3-5.5 8-5.5S16 8 16 8s-3 5.5-8 5.5S0 8 0 8zm8 3.5a3.5 3.5 0 1 0 0-7 3.5 3.5 0 0 0 0 7z" /></svg>
                                    </a>
                                    <a asp-action="UpdateLanguage" asp-route-id="@item.LangugeID" class="btn btn-warning">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash-fill" viewBox="0 0 16 16"><path d="M2.5 1a1 1 0 0 0-1 1v1a1 1 0 0 0 1 1H3v9a2 2 0 0 0 2 2h6a2 2 0 0 0 2-2V4h.5a1 1 0 0 0 1-1V2a1 1 0 0 0-1-1H10a1 1 0 0 0-1-1H7a1 1 0 0 0-1 1H2.5zm3 4a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 .5-.5zM8 5a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7A.5.5 0 0 1 8 5zm3 .5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 1 0z" /></svg>
                                    </a>
                                </td>

                            </tr>
                            i++;
                        }
                    </tbody>

                </table>
                
            </div>
        </div>
    </div>
</div>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>

