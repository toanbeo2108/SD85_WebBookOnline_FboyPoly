@model SD85_WebBookOnline.Share.Models.Manufacturer

@{
    ViewData["Title"] = "UpdateManufacturer";
    Layout = "~/Views/Shared/_Layout.cshtml";

}

<h1>UpdateManufacturer</h1>

<h4>Manufacturer</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="UpdateManufacturer">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ManufactureName" class="control-label"></label>
                <input asp-for="ManufactureName" class="form-control" />
                <span asp-validation-for="ManufactureName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Desciption" class="control-label"></label>
                <input asp-for="Desciption" class="form-control" />
                <span asp-validation-for="Desciption" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Status" class="control-label"></label>
                <input asp-for="Status" class="form-control" />
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="AllManufacturerManager" asp-area="Admin" asp-controller="ManufacturerManager" class="btn btn-primary">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
