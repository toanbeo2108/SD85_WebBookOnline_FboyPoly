                        }else
                        {
                            <img src="~/images/@Model.Avatar" alt="avatar" class="rounded-circle img-fluid" style="width: 150px; height:150px; object-fit: cover">
                        }
                        <h5 class="my-3">@Model.UserName</h5>
                        <p class="text-muted mb-1">Full Stack Developer</p>
                        <p class="text-muted mb-4">Boy Cầu Giấy, sấy nát trái tym iem <3</p>
                        <div class="d-flex justify-content-center mb-2">
                            <button type="button" class="btn btn-primary">Follow</button>
                            <button type="button" class="btn btn-outline-primary ms-1">Message</button>
                        </div>
                    </div>
                </div>
