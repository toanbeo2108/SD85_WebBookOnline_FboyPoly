@model SD85_WebBookOnline.Share.Models.User
@{
    ViewData["Title"] = "Account";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form asp-action="Update" method="post" enctype="multipart/form-data">
    <div class="container-xl px-4 mt-4">
        <div class="row">
            <div class="col-xl-4">
                <!-- Profile picture card-->
                <div class="card mb-4 mb-xl-0">
                    <div class="card-header">Profile Picture</div>
                    <div class="card-body text-center">
                        @if (Model?.Avatar == null)
                        {
                            <img class="img-account-profile rounded-circle mb-2" src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcQfHKr4J28Bd2GLN_c-P4FtX99NIFVS6rTurA&usqp=CAU" alt="avatar" style="width: 180px; height:180px; object-fit: cover">
                        }
                        else
                        {
                            <img class="img-account-profile rounded-circle mb-2" src="~/images/@Model.Avatar" alt="avatar" style="width: 180px; height:180px; object-fit: cover">
                        }
                        @*                         <!-- Profile picture image-->
                        <img class="img-account-profile rounded-circle mb-2" src="~/images/@Model.Avatar" alt="avatar" style="width: 180px; height:180px; object-fit: cover"> *@
                        <!-- Profile picture help block-->
                        <div class="small font-italic text-muted mb-4">JPG or PNG no larger than 5 MB</div>
                        <!-- Profile picture upload button-->
                        <input asp-for="Avatar" class="form-control" type="file" name="imageFile" class="btn btn-primary" accept="image/*">
                    </div>
                </div>
            </div>
            <div class="col-xl-8">
                <!-- Account details card-->
                <div class="card mb-4">
                    <div class="card-header">Account Details</div>
                    <div class="card-body">
                        <!-- Form Group (username)-->
                        <div class="mb-3">
                            <label class="small mb-1">Username (how your name will appear to other users on the site)</label>
                            <input asp-for="UserName" class="form-control" type="text" placeholder="Enter your username">
                        </div>
                        <!-- Form Group (email address)-->
                        <div class="mb-3">
                            <label class="small mb-1">Email address</label>
                            <input asp-for="Email" class="form-control" type="email" placeholder="Enter your email address">
                        </div>
                        <!-- Form Group (phone Numbers)-->
                        <div class="mb-3">
                            <label class="small mb-1">Phone number</label>
                            <input asp-for="PhoneNumber" class="form-control" type="tel" placeholder="Enter your phone number">
                        </div>
                        <!-- Form Group (Country)-->
                        <div class="mb-3">
                            <label class="small mb-1">Country</label>
                            <input asp-for="Country" class="form-control" type="text" placeholder="Enter your Country">
                        </div>

                    </div>
                </div>
            </div>
            <!-- Save changes button-->
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </div>
    </div>
</form>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script>
    $(document).ready(function () {
        $('input[type="file"]').change(function (e) {
            var reader = new FileReader();
            reader.onload = function (e) {
                $('.img-account-profile').attr('src', e.target.result);
            }
            reader.readAsDataURL(e.target.files[0]);
        });
    });
</script>

