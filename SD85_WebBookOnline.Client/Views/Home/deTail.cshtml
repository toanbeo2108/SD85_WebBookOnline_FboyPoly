            </div>
        </div>
    </div>
</div>
   
<script>
    var btnPlus = document.querySelector('.btn-plus');
    var btnMinus = document.querySelector('.btn-minus');
    var input = document.querySelector('#quantity');

    // Remove existing event listeners
    btnPlus.removeEventListener('click', incrementQuantity);
    btnMinus.removeEventListener('click', decrementQuantity);

    // Define event handlers
    function incrementQuantity() {
        var quantity = parseInt(input.value);
        quantity += 1;
        input.value = quantity;
    }

    function decrementQuantity() {
        var quantity = parseInt(input.value);
        if (quantity > 1) {
            quantity -= 1;
            input.value = quantity;
        }
    }

    // Attach event listeners
    btnPlus.addEventListener('click', incrementQuantity);
    btnMinus.addEventListener('click', decrementQuantity);

    document.querySelector('#addToCart').addEventListener('click', function (event) {
        event.preventDefault();
        var quantity = document.querySelector('#quantity').value;
        var url = '@Url.Action("AddToCart", "Home", new { id = @book.BookID })' + '?quantity=' + quantity;
        window.location.href = url;
    });
    document.querySelector('#quantity').addEventListener('input', function () {
        let value = parseInt(this.value);
        if (isNaN(value) || value <= 0) {
            this.value = 1;
        } else {
            this.value = value;
        }
    });

</script>
