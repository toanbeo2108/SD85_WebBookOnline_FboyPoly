@using SD85_WebBookOnline.Share.Models

@{
    Layout = "~/Views/Shared/_LayoutShop.cshtml";
    IEnumerable<Book> lstBook = ViewBag.lstbookSelect as IEnumerable<Book>;
    IEnumerable<Combo> lstcombo = ViewBag.lstComboSelect as IEnumerable<Combo>;
}
@if (lstBook != null)
{
    foreach (var item in lstBook)
    {
        <a asp-action="deTail" asp-controller="Home" asp-route-id="@item.BookID">
            <div class="col-lg-4 col-md-6 col-sm-12 pb-1">
                <div class="card product-item border-0 mb-4">
                    <div class="card-header product-img position-relative overflow-hidden bg-transparent border p-0">
                        <a asp-action="deTail" asp-controller="Home" asp-route-id="@item.BookID"><img class="img-fluid w-100" src="~/photoBooks/@item.MainPhoto" alt=""></a>
                    </div>
                    <div class="card-body border-left border-right text-center p-0 pt-4 pb-3">
                        <h6 class="text-truncate mb-3">@item.BookName</h6>
                        <div class="d-flex justify-content-center">
                            <h5>@item.Price</h5>
                        </div>
                    </div>
                    <div class="card-footer d-flex justify-content-between bg-light border">
                        <a asp-action="deTail" asp-controller="Home" asp-route-id="@item.BookID" class="btn btn-sm text-dark p-0"><i class="fas fa-eye text-primary mr-1"></i>View Detail</a>
                        <a asp-action="AddToCart" asp-controller="Home" asp-route-id="@item.BookID" class="btn btn-sm text-dark p-0"><i class="fas fa-shopping-cart text-primary mr-1"></i>Add To Cart</a>
                    </div>
                </div>
            </div>
        </a>
    }
}
else
{
    <div class="text-center mb-4">
        <h2 class="section-title px-5"><span class="px-2">Tạm thời nhưng sản phẩm đã hết</span></h2>
    </div>
}
<div class="container-fluid py-5">
    <div class="text-center mb-4">
        <h2 class="section-title px-5"><span class="px-2">Combo</span></h2>
    </div>
    <div class="row px-xl-5">
        <div class="col">
            <div class="owl-carousel related-carousel">
            </div>
        </div>
    </div>
</div>
@if(lstcombo != null)
{
    foreach(var item in lstcombo)
    {
        <a asp-action="DeTail" asp-controller="Home" asp-route-id="@item.ComboID">
            <div class="col-lg-4 col-md-6 col-sm-12 pb-1">
                <div class="card product-item border-0 mb-4">
                    <div class="card-header product-img position-relative overflow-hidden bg-transparent border p-0">
                        <a asp-action="deTail" asp-controller="Home" asp-route-id="@item.ComboID"><img class="img-fluid w-100" src="~/photoBooks/@item.Image" alt=""></a>
                    </div>
                    <div class="card-body border-left border-right text-center p-0 pt-4 pb-3">
                        <h6 class="text-truncate mb-3">@item.ComboName</h6>
                        <div class="d-flex justify-content-center">
                            <h6>@item.Price</h6><h6 class="text-muted ml-2"><del>@item.Price</del></h6>
                        </div>
                    </div>
                    <div class="card-footer d-flex justify-content-between bg-light border">
                        <a asp-action="DeTail" asp-controller="Home" asp-route-id="@item.ComboID" class="btn btn-sm text-dark p-0"><i class="fas fa-eye text-primary mr-1"></i>View Detail</a>
                        <a asp-action="AddToCart" asp-controller="Home" asp-route-id="@item.ComboID" class="btn btn-sm text-dark p-0"><i class="fas fa-shopping-cart text-primary mr-1"></i>Add To Cart</a>
                    </div>
                </div>
            </div>
        </a>
    }
}
else
{
    <div class="container-fluid py-5">
        <div class="text-center mb-4">
            <h2 class="section-title px-5"><span class="px-2">Sản Phẩm Tạm Thời Hết Hàng</span></h2>
        </div>
        <div class="row px-xl-5">
            <div class="col">
                <div class="owl-carousel related-carousel">
                </div>
            </div>
        </div>
    </div>
}
